{
  "lock": false,
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check",
    "dev": "vite",
    "build": "vite build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update ."
  },
  "lint": {
    "rules": {
      "tags": ["fresh", "recommended"]
    }
  },
  "exclude": ["**/_fresh/*", "static/gameboy.*"],
  "imports": {
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.5",
    "@kitsonk/ga4": "jsr:@kitsonk/ga4@^0.1.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "fresh": "jsr:@fresh/core@^2.1.2",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.3.2",
    "vite": "npm:vite@^7.1.3",
    "tailwindcss": "npm:tailwindcss@^4.0.9",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.0.9"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.asynciterable", "dom.iterable", "deno.ns"],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": ["vite/client"]
  },
  "nodeModulesDir": "auto",
  "deploy": {
    "project": "945ab8ab-d18c-4e2d-8801-79f6ba868f24",
    "exclude": ["**/node_modules"],
    "include": [],
    "entrypoint": "_fresh/server.js"
  }
}
